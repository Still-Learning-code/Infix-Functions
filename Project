import java.awt.Point

//chp 40 Infix Functions
//some functions to be called without period or bracket
//resulting code looks like natural language
//inline Map definition

infix fun Point.moveBy(offset:Point): Point {
    return Point(this.x + offset.x , this.y + offset.y)
}


fun main () {
val pair = 1 to "One"
    println(pair)

val point1 = Point(1,3)
    val point2 = Point(2,4)
    val point3 = point1.moveBy(point2)
    println(point3)
}
